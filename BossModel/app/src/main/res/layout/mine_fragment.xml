                        android:gravity="center_vertical"
                        android:text="管理求职意向" />

                    <ImageView
                        android:id="@+id/imageView91"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitEnd"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/right_forward" />
                </LinearLayout>
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/gray"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView111"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:scaleType="fitStart"

                        app:srcCompat="@drawable/update_icon" />

                    <TextView
                        android:id="@+id/textView1111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="提升简历排名" />

                    <ImageView
                        android:id="@+id/imageView911"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitEnd"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/right_forward" />
                </LinearLayout>
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/gray"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView1112"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:scaleType="fitStart"

                        app:srcCompat="@drawable/response" />

                    <TextView
                        android:id="@+id/textView111122"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:text="牛人问答" />

                    <ImageView
                        android:id="@+id/imageView91123"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitEnd"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/right_forward" />
                </LinearLayout>
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/gray"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView11123"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:scaleType="fitStart"

                        app:srcCompat="@drawable/bussiness_icon" />

                    <TextView
                        android:id="@+id/textView11112"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="15dp"
